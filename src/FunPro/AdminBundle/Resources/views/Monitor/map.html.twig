            async defer></script>
{% endblock javascriptsPageScripts %}

{% block content %}
    <div class="page-content">
        <div class="container-fluid">
            <!-- BEGIN PAGE BREADCRUMBS -->
            {% block breadcrumbs %}
                <ul class="page-breadcrumb breadcrumb">
                    <li>
                        <a href="/">خانه</a>
                        <i class="fa fa-circle"></i>
                    </li>
                    <li>
                        <span>مانیتورینگ</span>
                    </li>
                </ul>
            {% endblock breadcrumbs %}
