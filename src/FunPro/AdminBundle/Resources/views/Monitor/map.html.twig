            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="page-content-inner">
                <div class="row">
                    <div class="col-md-1 col-xs-12 controls-button">
                        <div class="portlet light portlet-fit ">
                            <div class="portlet-body">
                                <div class="btn-group autoRefresh" data-toggle="buttons">
                                    <label class="btn btn-icon-only active">
                                        <input type="checkbox" class="toggle"><i class="fa fa-refresh"></i>
                                    </label>
                                </div>
                                <div class="btn-group showService" data-toggle="buttons">
                                    <label class="btn yellow-crusta">
                                        <input type="checkbox" class="toggle">S
                                    </label>
                                </div>
                                <div class="btn-group city" data-toggle="buttons">
                                    <label class="btn blue">
                                        <input data-lat="32.869146" data-lng="59.222362" type="radio" class="toggle"> B </label>
                                    <label class="btn blue active">
                                        <input data-lat="36.313048" data-lng="59.575237" type="radio" class="toggle"> M </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-11 col-xs-12">
                        <div class="portlet light portlet-fit ">
