                                    <span class="help-block"><br />
                                        {% if form.avatarFile.vars.errors|length %}{{ form_errors(form.avatarFile) }}{% endif %}
                                    </span>
                                </div>
                                <div class="form-group form-md-radios">
                                    <label>جنسیت</label>
                                    <div class="md-radio-list">
                                        <div class="md-radio">
                                            <input type="radio" id="radio1" name="driver[sex]" class="md-radiobtn" value="{{ constant('FunPro\\UserBundle\\Entity\\User::SEX_MALE') }}" checked>
                                            <label for="radio1">
                                                <span></span>
                                                <span class="check"></span>
                                                <span class="box"></span>مرد</label>
                                        </div>
                                        <div class="md-radio">
                                            <input type="radio" id="radio2" value="{{ constant('FunPro\\UserBundle\\Entity\\User::SEX_FEMALE') }}" name="driver[sex]" class="md-radiobtn">
                                            <label for="radio2">
                                                <span></span>
                                                <span class="check"></span>
                                                <span class="box"></span>زن</label>
                                        </div>
                                    </div>
                                    <span class="help-block">
                                        {% if form.sex.vars.errors|length %}{{ form_errors(form.sex) }}{% endif %}
                                    </span>
                                </div>
                            </div>
                            <div class="form-actions noborder">
                            <input type="submit" {% if form.vars.method == 'POST' %}value="ثبت نام"{% else %}value="ویرایش"{% endif %} class="btn blue" />
                            </div>
                        </div>
                    </div>
